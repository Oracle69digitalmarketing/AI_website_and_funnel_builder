{
  "manifest_version": 3,
  "name": "AI Marketing Assistant",
  "version": "1.0",
  "description": "Generates localized marketing content using AI.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
